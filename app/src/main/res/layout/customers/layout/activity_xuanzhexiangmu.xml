<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/house_text_城市"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:maxEms="2"
                android:singleLine="true"
                android:text="成都"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/house_spinner_城市"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/需求类型"
                android:visibility="gone"
                >
            </Spinner>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/house_button_relativelayout搜索"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:background="@color/qianhui"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:padding="5dp"
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="小区/楼盘/商铺"
                android:background="@drawable/shape_ettext"
                android:textSize="15sp"
                />
            <ImageView
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search2"
                />
        </RelativeLayout>

        <LinearLayout
            android:visibility="visible"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/house_text_housetype"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:maxEms="2"
                android:singleLine="true"
                android:text="新房"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/house_spinner_housetype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/需求类型"
                android:visibility="gone"
                >
            </Spinner>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="9"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <TextView
                android:id="@+id/content_区域"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:singleLine="true"
                android:text="区域"
                />
            <ImageView
                android:src="@drawable/downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:visibility="gone"
                android:id="@+id/spinner区域"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/区域"
                android:spinnerMode="dropdown"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <TextView
                android:id="@+id/content_均价"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:singleLine="true"
                android:text="均价"
                />
            <ImageView
                android:src="@drawable/downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:visibility="gone"
                android:id="@+id/spinner均价"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/均价"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <TextView
                android:id="@+id/content_类型"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:singleLine="true"
                android:text="类型"
                />
            <ImageView
                android:src="@drawable/downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:visibility="gone"
                android:id="@+id/spinner类型"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/类型"
                />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <TextView
                android:id="@+id/content_更多"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:singleLine="true"
                android:text="更多"
                />
            <Spinner
                android:visibility="gone"
                android:id="@+id/spinner更多"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/更多"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/button_排序"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_reverseorder"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/work_button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择项目"
            android:textColor="@color/chunhei"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/bgcolcor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/customers_swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/yunsuan"
                    android:src="@drawable/animation_refresh"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="人算不如云算"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </android.support.v7.widget.RecyclerView>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>>
    </LinearLayout>

</LinearLayout>
