<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/work_button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="成交的客户"
            android:textColor="@color/chunhei"
            android:textSize="16sp"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/work_button_over_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待成交"
            android:textColor="@color/chunhei"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            />
        <Button
            android:id="@+id/work_button_over_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成交"
            android:textColor="@color/chunhei"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            />
        <Button
            android:id="@+id/work_button_over_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未成交"
            android:textColor="@color/chunhei"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            />
        <Button
            android:id="@+id/work_button_over_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="申诉"
            android:textColor="@color/chunhei"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/forward_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:scrollbars="none"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="#4393f9"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#4393f9"
        app:tabTextAppearance="@style/CubeTabLayoutTextStyle"
        app:tabTextColor="#26252a"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f6f9"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/forward_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />



</LinearLayout>
