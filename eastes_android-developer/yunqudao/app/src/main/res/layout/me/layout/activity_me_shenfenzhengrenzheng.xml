<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/qianhui"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/chunbai"
        >
        <ImageButton
            android:id="@+id/me_button_返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份证认证"
            android:textColor="@color/chunhei"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/me_button_完成"
            android:text="完成"
            android:textSize="16sp"
            android:textColor="@color/chunhei"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/ic_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/chunbai"
        >

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <TextView
                android:text="姓名"
                android:textSize="15sp"
                android:textColor="@color/chunhei"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/me_edittext_身份证姓名"
                android:hint="请填写身份证上的姓名"
                android:textSize="14sp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/ic_line"
            />
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <TextView
                android:text="身份证号"
                android:textSize="15sp"
                android:textColor="@color/chunhei"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/me_edittext_身份证号码"
                android:hint="请填写身份证号码"
                android:textSize="14sp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="18"
                android:background="@android:color/transparent"
                />

        </LinearLayout>
    </LinearLayout>
    
    
</LinearLayout>
