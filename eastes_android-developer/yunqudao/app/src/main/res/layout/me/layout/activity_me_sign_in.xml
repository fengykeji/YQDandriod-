<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <ImageButton
            android:id="@+id/me_button_返回"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:text="账号注册"
            android:textColor="@color/chunhei"
            android:textSize="23sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <EditText
                android:id="@+id/me_edittext_手机号码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@android:color/transparent"
                android:hint="请输入11位手机号码"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="11"
                android:textSize="14sp"
                />


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/ic_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <EditText
                android:id="@+id/me_edittext_验证码"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@android:color/transparent"
                android:hint="请输入4位数字验证码"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="4"
                android:textSize="14sp"
                />

            <Button
                android:id="@+id/me_button_获取验证码"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:text="获取验证码"
                android:textColor="@color/shenlan"
                android:textSize="15sp"
                />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/ic_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <EditText
                android:id="@+id/me_edittext_密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@android:color/transparent"
                android:hint="请输入6-20位新密码仅支持数字和英文大小写"
                android:textSize="14sp"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textEmailAddress"
                android:maxLength="20"
                />


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/ic_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <EditText
                android:id="@+id/me_edittext_再次输入密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@android:color/transparent"
                android:hint="确认密码"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:maxLength="20"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <EditText
                android:id="@+id/me_edittext_邀请号码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@android:color/transparent"
                android:hint="请输入邀请电话号码(选填)"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="11"
                android:textSize="14sp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/ic_line"
            />

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_vertical"-->
            <!--android:orientation="horizontal"-->

            <!--&gt;-->
            <!--<CheckBox-->
                <!--android:id="@+id/me_checkbox_条例"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--/>-->
            <!--<Button-->
                <!--android:id="@+id/me_button_平台条例"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:text="我已阅读并同意《云算平台使用条例》"-->
                <!--android:textSize="13sp"-->
                <!--/>-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <Button
                android:id="@+id/me_button_注册"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_loginbackground"
                android:text="注册"
                android:textColor="@color/chunbai"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>