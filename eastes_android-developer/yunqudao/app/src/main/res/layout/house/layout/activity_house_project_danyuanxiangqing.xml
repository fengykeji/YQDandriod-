<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        >
        <ImageButton
            android:id="@+id/house_button_返回"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="单元详情"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/ic_line"
        >
    </ImageView>

    <LinearLayout
        android:id="@+id/ll_closectent"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_showcontent"
            android:src="@drawable/xia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_showcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <TextView
              android:id="@+id/tv_zonghushu"
              android:text="总户数:"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_kaipanfangshi"
                android:layout_marginLeft="200dp"
                android:text="开盘方式:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_loushangcengshu"
                android:text="楼上层数:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_louxiacengshu"
                android:layout_marginLeft="200dp"
                android:text="楼下层数:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_kaipanshijian"
                android:text="开盘时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_jiaofangshijian"
                android:layout_marginLeft="200dp"
                android:text="交房时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_close"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_shang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/ic_line"
        />
    <LinearLayout
        android:background="#ffffff"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/yiding"
            android:textColor="@color/white"
            android:text="已定"
            android:layout_width="93dp"
            android:layout_height="33dp" />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/saled"
            android:textColor="@color/white"
            android:text="已售"
            android:layout_width="93dp"
            android:layout_height="33dp" />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#dcdcdc"
            android:textColor="@color/white"
            android:text="未售"
            android:layout_width="93dp"
            android:layout_height="33dp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/re_loudong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>




</LinearLayout>
