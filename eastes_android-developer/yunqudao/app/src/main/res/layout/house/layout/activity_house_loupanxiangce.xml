<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chunhei"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        >
        <ImageButton
            android:id="@+id/house_button_返回"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_leftarrow"
            android:background="@android:color/transparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="楼盘相册"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
    <android.support.v4.view.ViewPager
        android:id="@+id/house_viewpager_图册"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/house_text_效果图"
        android:text="效果图1/10"
        android:textSize="18sp"
        android:textColor="@color/qianhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/house_text_全部图"
            android:text="全部1/10"
            android:textSize="18sp"
            android:textColor="@color/qianhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/house_button_效果图"
            android:text="效果图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />
        <Button
            android:id="@+id/house_button_实景图"
            android:text="实景图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />
        <Button
            android:id="@+id/house_button_位置图"
            android:text="位置图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />
        <Button
            android:id="@+id/house_button_户型图"
            android:text="户型图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />
        <Button
            android:id="@+id/house_button_样板间"
            android:text="样板间"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />
        <Button
            android:id="@+id/house_button_配套图"
            android:text="配套图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />



    </LinearLayout>
</RelativeLayout>
</LinearLayout>
