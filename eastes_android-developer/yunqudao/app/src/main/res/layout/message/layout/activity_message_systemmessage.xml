<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/message_button_返回"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统消息"
            android:textColor="@color/chunhei"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/ic_line"
        />

    <!--模拟，后期删除-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/message_item_linearlayout_审核通过"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="审核通过"
                android:textColor="@color/chunhei"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/message_icon_已读未读状态1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_news_unread"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <TextView
                android:id="@+id/message_text_审核状态信息1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您于2017-11-23提交的资料通过审核！"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/message_text_审核时间1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-11-23 12:56:32"
                android:textSize="15sp"
                />
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/ic_line"
        />
    <!--模拟，后期删除-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/message_item_linearlayout_审核未通过"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="审核未通过"
                android:textColor="@color/chunhei"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/message_icon_已读未读状态2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_news_unread"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <TextView
                android:id="@+id/message_text_审核状态信息2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您于2017-11-23提交的资料未通过审核！"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/message_text_审核时间2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-11-23 12:56:32"
                android:textSize="15sp"
                />
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/ic_line"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_recyclerview_系统消息列表"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
