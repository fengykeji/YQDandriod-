<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="消息"
            android:textSize="16sp"
            android:textColor="@color/chunhei"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/ic_line"
        />


    <LinearLayout
        android:background="@color/bgcolcor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--模拟，后期删除-->
    <LinearLayout
        android:id="@+id/message_item_linearlayout_系统消息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/chunbai"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:src="@drawable/ic_systemmessage"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="@color/chunhei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="系统消息"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/message_text_未读系统消息条数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="未读消息1条"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        />
<!--模拟，后期删除-->
    <LinearLayout
        android:id="@+id/message_item_linearlayout_工作消息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/chunbai"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:src="@drawable/ic_worknews"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="@color/chunhei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="工作消息"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/message_text_未读工作消息条数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未读消息1条"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/message_item_linearlayout_勘察抢单"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/chunbai"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:src="@drawable/ic_worknews"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="vertical"
                >
                <TextView
                    android:textColor="@color/chunhei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="勘察抢单"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/message_text_未读抢单消息条数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未读消息1条"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            />
    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_recyclerview_消息列表"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>
