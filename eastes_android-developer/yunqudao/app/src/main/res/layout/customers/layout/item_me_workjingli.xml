<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp">
<ImageView
    android:id="@+id/bar_blue"
    android:src="@drawable/bar_blue_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/miantext"
                android:textSize="20sp"
                android:text="12313"
                android:id="@+id/tv_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/shenlan"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:id="@+id/me_workjingli_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018_07_13至2018_07_13"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tuijiannum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_jingjiren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经纪人"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_daofangnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_chengjiaonum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
