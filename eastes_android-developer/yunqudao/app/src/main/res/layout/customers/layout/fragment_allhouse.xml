<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:id="@+id/house_text_城市"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="成都"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/house_spinner_城市"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/需求类型"
                android:visibility="gone"
                >
            </Spinner>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/house_button_relativelayout搜索"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:background="@color/qianhui"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:padding="5dp"
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="小区/楼盘/商铺"
                android:background="@drawable/shape_ettext"
                android:textSize="15sp"
                />
            <ImageView
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search2"
                />
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:id="@+id/house_text_housetype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="新房"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/downarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/house_spinner_housetype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:dropDownVerticalOffset="35dp"
                android:dropDownWidth="1080px"
                android:entries="@array/需求类型"
                android:visibility="gone"
                >
            </Spinner>
        </LinearLayout>
    </LinearLayout>


    <com.ccsoft.yunqudao.ui.house.CustomViewPager
        android:id="@+id/house_viewpager_分类"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.ccsoft.yunqudao.ui.house.CustomViewPager>


</LinearLayout>
