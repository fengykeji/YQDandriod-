<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageButton
            android:id="@+id/customers_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="选择城市"
            android:textColor="@color/chunhei"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:layout_centerVertical="true"
            android:textColor="@color/chunhei"
            android:textSize="14sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_line"
        />
    <TextView
        android:id="@+id/location_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="当前定位："
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/customers_open_citylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="300dp"
            android:layout_gravity="center|right"
            android:gravity="center"
            >
            <com.ccsoft.yunqudao.utils.indexbar.CubeIndexBar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/sidebar"
                android:layout_width="20dp"
                android:layout_height="300dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                app:indexBarPressBackground="@color/chunhei"
                app:indexBarTextSize="12sp"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
