<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageButton
            android:id="@+id/work_button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_leftarrow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="新房推荐"
            android:textColor="@color/chunhei"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/work_button_add_recommend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_3"
            android:visibility="visible"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/forward_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:scrollbars="none"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="#4393f9"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#4393f9"
        app:tabTextAppearance="@style/CubeTabLayoutTextStyle"
        app:tabTextColor="#26252a"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f6f9"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/forward_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />

</LinearLayout>
