                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:textColor="@color/miantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付款方式："
                        android:textSize="15sp"
                        />
                    <TextView
                        android:textColor="@color/miantext"
                        android:id="@+id/customers_text_card_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:textColor="@color/miantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="约定签约时间："
                        android:textSize="15sp"
                        />
                    <TextView
                        android:textColor="@color/miantext"
                        android:id="@+id/customers_text_card_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:textColor="@color/miantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审核人："
                        android:textSize="15sp"
                        />
                    <TextView
                        android:textColor="@color/miantext"
                        android:id="@+id/customers_text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:textColor="@color/miantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
