            <android.support.design.widget.TabLayout
                android:id="@+id/customers_TabLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:scrollbars="none"
                app:tabBackground="@drawable/tablayout_background"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/chunbai"
                app:tabTextColor="@color/chunhei"
                app:tabIndicatorHeight="0dp"
                />
            <com.ccsoft.yunqudao.ui.view.ViewPagerForScrollView
                android:id="@+id/customers_viewpager_xiangqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
