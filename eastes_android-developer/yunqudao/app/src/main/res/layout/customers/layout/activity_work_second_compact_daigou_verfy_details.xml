                        android:textColor="@color/miantext"
                        android:id="@+id/tv_maifangjinpo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:textColor="@color/miantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参考价格："
                        android:textSize="15sp"
                        />
                    <TextView
                        android:textColor="@color/miantext"
                        android:id="@+id/tv_cankaojiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:textColor="@color/miantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注人数："
                        android:textSize="15sp"
                        />
                    <TextView
                        android:textColor="@color/miantext"
                        android:id="@+id/tv_guanzhurenshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:textColor="@color/miantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预估卖出周数："
                        android:textSize="15sp"
